<Window x:Class="TextToSpeech.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextToSpeech"
        mc:Ignorable="d"
        Title="TEXT TO SPEECH" Height="350" Width="600">
    <!-- example from https://www.tutorialspoint.com/wpf/wpf_multimedia.htm-->
    <!-- added reference from assemblies/framework/system.speech-->
    <Grid>
        <TextBox x:Name="textBox" 
            HorizontalAlignment="Left" Height="50" Margin="60,100,0,0" 
                 TextWrapping="Wrap"  VerticalAlignment="Top" Width="480"/>
        <Button x:Name="button" Content="Speak" 
                HorizontalAlignment="Left" Margin="250,176,0,0" 
                VerticalAlignment="Top" Width="75" Height="25" Click="textToSpeech"/>

    </Grid>
</Window>
